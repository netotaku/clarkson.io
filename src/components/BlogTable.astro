---
import FormattedDate from './FormattedDate.astro'; 
const { posts } = Astro.props;
---
<div class="blog-table">    
    {
        posts.map((post) => (
            <a class="blog-table__link" href={`/blog/${post.id}/`}>
                <div class="blog-table__img">
                    <img                    
                        src={post.data.heroImage}
                        alt=""
                    />
                </div>
                <div class="">
                    <strong><FormattedDate date={post.data.pubDate} /></strong>
                    <h2>{post.data.title}</h2>
                    <p>{post.data.description}</p>
                    <p>
                        {post.data.categories?.map((category) => (
                            <span class="tag" data-href={`/blog/category/${category.toLowerCase()}/`}>
                            #{category}
                            </span>
                        ))}
                    </p>
                </div>
            </a>
        ))
    }
</div>