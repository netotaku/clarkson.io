---
const {
  title,
  summary,
  icon = "fa-solid fa-circle-info",
} = Astro.props;
---

<section class="section unit js-expander">
  <div class="unit__details">
    <div class="typography">
      <h2>{title}</h2>
      <p>{summary}</p>
    </div>
    <div class="unit__content typography js-expander__content">
        <slot />
    </div>
    <p class="typography">
      <a class="js-expander__link" href="#"></a>
    </p>
  </div>
  <div class="unit__icon icon">
    <i class={icon}></i>
  </div>
</section>
